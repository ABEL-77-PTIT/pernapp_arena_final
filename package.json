{
  "name": "arena-fullstack-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "format": "npm-run-all -p format:*",
    "format:code": "npm run prettier:code -- --write",
    "format:other": "npm run prettier:other -- --write",
    "prettier:code": "prettier \"**/*.{js,jsx}\"",
    "prettier:other": "prettier \"**/*.{md,css,scss,yaml,yml,json,prettierrc}\"",
    "deploy": "pm2 kill && cd frontend/ && yarn build && cd ../ && pm2 start ecosystem.config.js --env production"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1"
  }
}
